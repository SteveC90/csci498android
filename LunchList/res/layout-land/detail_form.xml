<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="3"
        android:stretchColumns="3" >
        <TableRow>
            <TextView android:text="@string/name_label" />
            <EditText
                android:id="@+id/name"
                android:layout_span="3" />
        </TableRow>

        <TableRow>
            <TextView android:text="@string/addr_label" />
            <EditText
                android:id="@+id/addr"
                android:layout_span="3" />
        </TableRow>

        <TableRow>
            <TextView android:text="@string/type_label" />

            <RadioGroup android:id="@+id/types" >
                <RadioButton
                    android:id="@+id/take_out"
                    android:checked="true"
                    android:text="@string/take_out" />

                <RadioButton
                    android:id="@+id/sit_down"
                    android:text="@string/sit_down" />

                <RadioButton
                    android:id="@+id/delivery"
                    android:text="@string/delivery" />
            </RadioGroup>

            <TextView android:text="@string/notes_label" />

            <LinearLayout android:orientation="vertical" >

                <EditText
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:maxLines="2"
                    android:scrollHorizontally="false" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</ScrollView>